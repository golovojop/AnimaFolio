<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:toot="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <k.s.yarlykov.animafolio.ui.fragments.gallery.ParallaxListItem
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/motionLayout"
        app:layoutDescription="@xml/motion_scene_parallax_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RvEduActivity">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            toot:src="@drawable/bkg_01_jan"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/tvDescription"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            toot:text="@string/motion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </k.s.yarlykov.animafolio.ui.fragments.gallery.ParallaxListItem>

</com.google.android.material.card.MaterialCardView>